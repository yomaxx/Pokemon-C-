<?php
    if (isset($_POST["color"]))     
        {
        $_GET["color"] = $color;    
        }

    if (!isset($_GET["HeadTitle"]) || $_GET["HeadTitle"] === '')
        {
        $_GET["HeadTitle"] = 'Welcome to this test page.';
        }
?>
<!doctype html>
<html lang="en">
    <head>
        <title> <?= $_GET["HeadTitle"] ?></title>
        <meta charset="UTF-8">
        <title>My Website</title>
        <style type="text/css">
            body{
                background-color: <?= $_GET["color"] ?>; <!-- Maak de Bg kleur wat er in $_GET color zit -->
            }
        </style>
    </head>

    <body>
        <form method="_POST">
            <h2>Change Title</h2><br>
                <input type="text" name="HeadTitle">

            <h2>background color: </h2><br>
            <select name="color">   //dropdown voor kleur
                <option value="red">red</option>
                <option value="blue">blue</option>
                <option value="yellow">yellow</option>
                <option value="green">green</option>
            </select>
            <br></br>
            <button type="submit">Submit changes</button> <!-- submit knop -->
        </form>
    </body>
</html>

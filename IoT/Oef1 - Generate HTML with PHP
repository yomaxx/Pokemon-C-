<?php
    if (!isset($_GET["HeadTitle"]) || $_GET["HeadTitle"] === '')
        {
        $_GET["HeadTitle"] = 'Welcome to this test page.';
        }
?>
<!doctype html>
<html lang="en">
    <head>
        <title> <?= $_GET["HeadTitle"] ?></title>
        <meta charset="UTF-8">
        <title>My Website</title>
        <style type="text/css">
            h3 {
                display: inline-block;
            }
            body{
                background-color: <?= $_GET["color"] ?>; 
            }
        </style> <!-- Hier maken we van de background-color de waarde in  $_GET["color"] -->
    </head>

    <body>
        <form method="_POST">
            <h2>Change Title</h2><br>
                <input type="text" name="HeadTitle">

            <h2>background color: </h2><br>
            <select name="color">   //dropdown voor kleur
                <option value="red">red</option>
                <option value="blue">blue</option>
                <option value="yellow">yellow</option>
                <option value="green">green</option>
            </select>

            <h2>Select size of table</h2>
                <h3>X-waarde: </h3>
                <input type="text" name="X-size"><br>
                <h3>Y-waarde: </h3>
                <input type="text" name="Y-size">
            
            <h2>Table:</h2>
            <table align="left" border="1" cellpadding="5" cellspacing="0">
            <?php
                if(isset($_GET["X-size"]) && isset($_GET["Y-size"]))
                    {
                    $k = 0;
                    for($i=1 ;$i<=$_GET["Y-size"] ;$i++)
                        {
                        echo "<tr>";
                        for ($j=1 ;$j<=$_GET["X-size"] ;$j++)
                            {
                            $k++;
                            echo "<td>$k</td>";
                            }
                        echo "</tr>";
                        }
                    }
            ?>
            </table>
            <br></br>
            <button type="submit">Submit changes</button> <!-- submit knop -->
        </form>


    </body>
</html>
